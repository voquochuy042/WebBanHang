
@{
    ViewBag.Title = "Danh sách Tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WebBanHang.Models.tb_News>  

@section NavigationHeader {

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Category" class="nav-link">@ViewBag.Title</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/News/Add" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý danh mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách @ViewBag.Title</h3>

                <div class="card-tools">
                    <a href="/Admin/News/add" class="btn btn-primary">Thêm mới</a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Hình ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Ngày tạo</th>
                            <th>Hiển thị</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                var strCheck = item.
                                <tr id="trow_@item.Id">
                                    <td>@i</td>
                                    <td><img style="width:400px" src="@item.Image"/></td>
                                    <td>@item.Title1</td>
                                    <td>@item.CreateDate.ToString()</td>
                                    <td>@Html.Raw("<a href='#'><i class = 'fa fa-check text-success'></i></a>")</td>
                                    <td>
                                        <a href="/Admin/News/Edit/@item.Id" class="btn btn-secondary">Sửa</a>
                                        <a href="#" data-id="@item.Id" class="btnDelete btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                                i++;

                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts{
    <script>
       $(document).ready(function () {
           $('body').on('click', '.btnDelete', function () {
               var id = $(this).data('id');
               var con = confirm('Bạn có chắc chắn muốn xóa?');
               if (con) {
                   $.ajax({
                       url: '/Admin/News/Delete/',
                       type: 'POST',
                       data: { id: id },
                       success: function (res) {
                           if (res.success===true) {
                               $('#trow_' + id).remove();
                           }
                       },
                       error: function (xhr, status, error) {
                           console.log(xhr.responseText);
                           alert('Đã có lỗi xảy ra. Vui lòng thử lại sau.');
                       }
                   });
               }
           });
       });

    </script>
}


